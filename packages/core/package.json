{
  "name": "@noesis/core",
  "version": "0.1.0",
  "description": "Noesis Core SDK - Portable, dependency-free, deterministic mastery-based learning engine",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "smoke": "npx tsx scripts/smoke.mjs",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "learning",
    "education",
    "mastery",
    "spaced-repetition",
    "adaptive-learning",
    "sdk",
    "bkt",
    "fsrs",
    "knowledge-tracing"
  ],
  "author": "Noesis Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/noesis/noesis-core.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/noesis/noesis-core#readme",
  "bugs": {
    "url": "https://github.com/noesis/noesis-core/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18"
  }
}
