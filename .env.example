# Noesis Core Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Required Configuration
# ===========================================

# OpenAI API Key for LLM-powered features (orchestration, engagement)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# Database connection string (PostgreSQL via Neon)
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/noesis

# ===========================================
# Optional Configuration
# ===========================================

# Environment mode: 'development' or 'production'
NODE_ENV=development

# Allowed origins for CORS in production (comma-separated)
# Example: https://example.com,https://app.example.com
ALLOWED_ORIGINS=

# Session secret for authentication (generate a random string)
# You can generate one with: openssl rand -base64 32
SESSION_SECRET=your-session-secret-here

# ===========================================
# Security Configuration
# ===========================================

# Disable CSRF protection (only for development/testing)
# WARNING: Never disable in production!
DISABLE_CSRF=false

# ===========================================
# Alternative LLM Providers
# ===========================================

# Anthropic API Key (Claude) - alternative to OpenAI
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# ===========================================
# Feature Flags
# ===========================================

# Enable WebGazer.js for real gaze tracking (optional, defaults to simulation)
# Set to 'true' to enable real webcam-based gaze tracking
ENABLE_REAL_GAZE_TRACKING=false

# ===========================================
# Logging & Debug
# ===========================================

# Log level: 'debug', 'info', 'warn', 'error'
LOG_LEVEL=info
